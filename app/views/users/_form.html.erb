<%= form_for @user do |f| %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="form-group">
    <%= f.label :first_name, "First Name" %>
    <br>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Last Name" %>
    <br>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :birthday, "Date of Birth" %><br />
    <%= f.date_select :birthday, order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 18, end_year: Date.today.year - 100, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username, "Choose Username" %>
    <br>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Choose Password" %>
    <br>
    <%= f.password_field :password, class: "form-control" %>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <br>
      <%= f.password_field :password_confirmation, class: "form-control" %>

  <div class="actions">
    <br/>
    <%= f.submit "Open Account", class: "btn btn-primary" %>
  </div>

<% end %>

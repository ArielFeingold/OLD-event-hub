<%= form_for @user do |f| %>

  <div class="form-group">
    <%= f.label :first_name, "First Name" %>
    <br>
    <%= f.text_field :first_name, class: "form-control", :placeholder => (@user.errors.full_messages_for(:first_name).first) %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Last Name" %>
    <br>
    <%= f.text_field :last_name, class: "form-control", :placeholder => (@user.errors.full_messages_for(:last_name).first)%>
  </div>

  <div class="form-group">
    <%= f.label :birthday, "Date of Birth" %><br />
    <%if @user.errors[:birthday].present?%>
      <div class="alert alert-danger" role="alert">
        <%= @user.errors.full_messages_for(:birthday).first %>
      </div>
    <%end%>
    <%= f.date_select :birthday, order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 18, end_year: Date.today.year - 100, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username, "Choose Username" %>
    <br>
    <%= f.text_field :username, class: "form-control", :placeholder => (@user.errors.full_messages_for(:username).first) %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Choose Password" %>
    <br>
    <%= f.password_field :password, class: "form-control" , :placeholder => (@user.errors.full_messages_for(:password).first) %>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <br>
      <%= f.password_field :password_confirmation, class: "form-control", :placeholder => (@user.errors.full_messages_for(:password_confirmation).first)%>

  <div class="actions">
    <br/>
    <%= f.submit "Open Account", class: "btn btn-primary" %>
  </div>

<% end %>
